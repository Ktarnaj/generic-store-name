/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,  
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["./projects/shared/*"],
      "@definitions": [
        "../definitions/index.ts"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "reactNamespace": "JSX"
  }
}
